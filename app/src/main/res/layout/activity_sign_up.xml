<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dextrotech.sqlitedatabase.SignUp">
    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:hint="Name"
        android:textColorHint="@color/colorPrimary"/>
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/edit_text_name"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textColorHint="@color/colorPrimary"/>
    <EditText
        android:id="@+id/edit_text_mobile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/edit_text_email"
        android:layout_marginTop="10dp"
        android:hint="Mobile"
        android:textColorHint="@color/colorPrimary"/>
    <EditText
        android:id="@+id/edit_text_age"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/edit_text_mobile"
        android:layout_marginTop="10dp"
        android:hint="Age"
        android:textColorHint="@color/colorPrimary"
        android:focusableInTouchMode="false"/>
    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/edit_text_age"
        android:layout_marginTop="10dp"
        android:password="true"
        android:hint="Password"
        android:textColorHint="@color/colorPrimary"/>
    <EditText
        android:id="@+id/edit_text_confirm_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/edit_text_password"
        android:layout_marginTop="10dp"
        android:password="true"
        android:hint="Confirm Password"
        android:textColorHint="@color/colorPrimary"/>
    <Button
        android:id="@+id/button_signup_signup"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/edit_text_confirm_password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="@string/signup"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:onClick="sendData"/>

</RelativeLayout>
